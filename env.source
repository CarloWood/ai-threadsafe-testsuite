source $HOME/projects/aicxx/env.source
export REPOBASE="$TOPPROJECT/ai-threadsafe-testsuite"

# The default configure options.
export CONFIGURE_OPTIONS="--enable-maintainer-mode --disable-static --prefix=$INSTALL_PREFIX"

# Aliases.
alias s='ls $REPOBASE/threadsafe/*.cxx $REPOBASE/threadsafe/*.h'
alias vi='vim -c "set tags=$REPOBASE/tags"'
alias configure='../$REPOBASE/configure $CONFIGURE_OPTIONS'
